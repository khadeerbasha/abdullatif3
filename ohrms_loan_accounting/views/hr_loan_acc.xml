<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    
        <record model="ir.ui.view" id="loan_payments_tree_view">
                <field name="name">loan.payments.tree</field>
                <field name="model">loan.payments</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Loan Payments">
                        <field name="name"/>
                    </tree>
                </field>
            </record>

            <record model="ir.ui.view" id="loan_payments_form_view">
                <field name="name">loan.payments.form</field>
                <field name="model">loan.payments</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Loan Payments">
                        <sheet>
                            <group col="4" colspan="4">
                                <field name="name"/>
                                <field name="journal_id"/>
                                <field name="debit_account_id"/>
                                <field name="credit_account_id"/>
                                
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <record model="ir.actions.act_window" id="action_loan_payments_tree_view">
                <field name="name">Loans Payments</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">loan.payments</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="loan_payments_tree_view"/>
            </record>
            
            <menuitem name="Loans Payments"
			parent="hr.menu_human_resources_configuration"
			id="menu_hr_loan_payments"
			groups="hr.group_hr_manager,hr.group_hr_user,base.group_user"
			action="action_loan_payments_tree_view"/>

        
        <record id="hr_loan_inherited" model="ir.ui.view">
            <field name="name">HR LOAN</field>
            <field name="model">hr.loan</field>
            <field name="inherit_id" ref="ohrms_loan.hr_loan_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="replace">
                   <header>
                       <!--button name="compute_installment" type="object" string="Compute Installment" class="oe_highlight"  attrs="{'invisible':[('state','in',('approve', 'refuse', 'reschedule'))]}"/-->
                        <button name="action_submit" type="object" string="Submit" states="draft" class="oe_highlight"/>
                        <button name="action_cancel" type="object" string="Cancel" states="draft" />
                        <button name="action_reschedule" type="object" string="Loan Reschedule" states="approve" class="oe_highlight"/>
                        <button name="action_reschedule_done" type="object" string="Loan Reschedule Done" states="reschedule" class="oe_highlight"/>
                        <button name="action_approve" type="object" string="Approve" states="waiting_approval_1" class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>
                        <button name="action_double_approve" type="object" string="Approve" states="waiting_approval_2" class="oe_highlight" groups="account.group_account_user,account.group_account_manager"/>
                        <button name="action_refuse" type="object" string="Refuse" states="waiting_approval_1,waiting_approval_2" class="oe_highlight" groups="hr.group_hr_manager,hr.group_hr_user"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,waiting_approval_1,approve" />
                    </header>
                </xpath>
                <xpath expr="//field[@name='loan_amount']" position="after">
                    <field name="pay_method" attrs="{'readonly':[('state','in',('approve', 'refuse', 'reschedule'))]}"/>
                    <!--field name="employee_account_id"  attrs="{'invisible':[('state', '=','draft')],'readonly':[('state','in',('approve', 'refuse', 'reschedule'))]}"/>
                    <field name="treasury_account_id"  attrs="{'invisible':[('state', '=','draft')],'readonly':[('state','in',('approve', 'refuse', 'reschedule'))]}"/>
                    <field name="journal_id"  attrs="{'invisible':[('state', '=','draft')],'readonly':[('state','in',('approve', 'refuse', 'reschedule'))]}"/-->
                </xpath>
                

            </field>
        </record>
        
        
        
    </data>
</odoo>
