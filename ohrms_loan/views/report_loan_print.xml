                                        <strong>
                                            <h3>
                                                <u>
                                                    EMPLOYEE  LOAN DETAILS
                                                </u>
                                            </h3>
                                        </strong>
                                    </td>
                                </tr>
                            </table>
                            <br />

                    
                          
                    
                    <table width="100%">
                            <tr >
                                <td class="text-left" width="23%">
                                        <strong>Employee :</strong>
                                        
                                        </td >
                                         <td class="text-left" width="27%">
                                        <span t-field="o.employee_id.name" />
                            
                                 </td>
                                 
                                 <td class="text-left" width="23%">
                                        <strong>Loan Number :</strong>
                                        </td>
                                        <td class="text-left"  width="27%">
                                        <span t-field="o.name"/>
                            
                                 </td>
                            </tr>
                        </table>
                        
                        <br />
                        
                        <table width="100%">
                           <tr >
                                <td class="text-left" width="23%">
                                        <strong>Department :</strong>
                                        
