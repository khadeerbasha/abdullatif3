<?xml version="1.0" encoding="UTF-8"?>
<odoo>
         
         <record id="group_special_delivery_order" model="res.groups">
            <field name="name">Special Delivery Order</field>
            <field name="comment">Special Delivery Order for Users</field>
            <field name="users" eval="[(4, ref('base.user_root'))]"/>
        </record>

        <record id="view_picking_form_inherit_special_order" model="ir.ui.view">
            <field name="name">stock.picking.inherit.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='origin']" position="before">
                    <field name="order_type" invisible="1"/>
                    <field name="delivery_order_type" attrs="{'invisible': [('order_type', '!=', 'outgoing')]}" groups="Ntech_Special_Delivery_Order.group_special_delivery_order"/>
                
                </xpath>

            </field>
        </record>

            <record model="ir.ui.view" id="special_delivery_order_tree">
                <field name="name">special.delivery.order.tree</field>
                <field name="model">special.delivery.order</field>
                <field name="type">tree</field>
                <field name="arch" type="xml">
                    <tree string="Special Delivery Order Types">
                        <field name="name"/>
                         <field name="debit_account_id"/>
                    </tree>
                </field>
            </record>

            <record model="ir.ui.view" id="special_delivery_order_form">
                <field name="name">special.delivery.order.form</field>
                <field name="model">special.delivery.order</field>
                <field name="type">form</field>
                <field name="arch" type="xml">
                    <form string="Special Delivery Order Types">
                        <sheet>
                            <group col="4" colspan="4">
                                <field name="name"/>
                                <field name="journal_id"/>
                                <field name="debit_account_id"/>
                                <field name="credit_account_id"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </record>

            <record model="ir.actions.act_window" id="action_special_delivery_order_view">
                <field name="name">Special Delivery Order Types</field>
                <field name="type">ir.actions.act_window</field>
                <field name="res_model">special.delivery.order</field>
                <field name="view_mode">tree,form</field>
                <field name="view_id" ref="special_delivery_order_tree"/>
            </record>


            <menuitem id="special_delivery_order_type_menu" name="Special Delivery Order Types" parent="stock.menu_stock_config_settings" action="action_special_delivery_order_view" sequence="41"/>
            

       

</odoo>


