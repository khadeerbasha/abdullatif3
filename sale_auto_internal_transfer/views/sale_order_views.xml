<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_view_form_inherit" model="ir.ui.view">
        <field name="name">Sale order view form inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_invoice']" position="before">
                <button type="object" name="action_view_delivery_internal" class="oe_stat_button" icon="fa-truck"
                        attrs="{'invisible': [('delivery_count_internal', '=', 0)]}" groups="stock.group_stock_user">
                    <field name="delivery_count_internal" widget="statinfo" string="INT Delivery"/>
                </button>
            </xpath>
            <button name="action_confirm" position="before">
                <button name="action_check_product_availability" string="Check Availability" type="object"
                        attrs="{'invisible': ['|', ('all_available_ok', '=', True), ('state', 'in', ('sale', 'done', 'cancel'))]}"
                        class="btn-primary" data-hotkey="c"/>
            </button>
            <xpath expr="//button[@name='action_confirm'][2]" position="after">
                <button name="action_check_product_availability" string="Check Availability" type="object"
                        attrs="{'invisible': ['|', ('all_available_ok', '=', False), ('state', 'in', ('sale', 'done', 'cancel'))]}"
                        data-hotkey="c"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='route_id']" position="after">
                <field name="warehouse_location_id" options="{'no_create': True}"/>
                <field name="internal_warehouse_id" invisible="1" options="{'no_create': True}"/>
                <field name="is_available" force_save="1"/>
            </xpath>
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='route_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('warehouse_location_id', '!=', False)]}</attribute>
            </xpath>
            <field name="picking_policy" position="after">
                <field name="internal_picking_type_id" invisible="1" groups="base.group_no_one"/>
                <field name="transit_location" force_save="1"
                       attrs="{'readonly': [('state', 'in', ('sale', 'done', 'cancel'))]}"
                       options="{'no_create': True}"/>
                <field name="all_available_ok" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
