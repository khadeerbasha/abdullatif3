<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Product Views -->
    <record id="view_stock_product_template_tree_inherit" model="ir.ui.view">
        <field name="name">product.template.stock.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_stock_product_template_tree"/>
        <field name="arch" type="xml">
            <field name="qty_available" position="after">
                <field name="qty_available_sale" attrs="{'invisible':[('type', '!=', 'product')]}" optional="show"
                       decoration-danger="qty_available_sale &lt; 0"/>
            </field>
        </field>
    </record>

    <record id="view_stock_product_tree_inherit" model="ir.ui.view">
        <field name="name">product.product.stock.tree.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="stock.view_stock_product_tree"/>
        <field name="arch" type="xml">
            <field name="qty_available" position="after">
                <field name="qty_available_sale" attrs="{'invisible':[('type', '!=', 'product')]}" optional="show"
                       decoration-danger="virtual_available &lt; 0" decoration-warning="virtual_available == 0"
                       decoration-bf="1"/>
            </field>
        </field>
    </record>

    <record id="view_stock_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.stock.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" postion="inside">
                <page string="Stock By Warehouse">
                    <field name="product_quant_ids" domain="[('location_id.usage','!=','view')]">
                        <tree>
                            <field name="warehouse_id"/>
                            <field name="location_id"/>
                            <field name="warehouse_id"/>
                            <field name="quantity"/>
                            <field name="reserved_quantity"/>
                            <field name="available_quantity"/>
                            <field name="qty_available_sale"/>
                        </tree>
                        <form>
                            <sheet>
                                <group>
                                    <group>
                                        <field name="warehouse_id"/>
                                        <field name="location_id"/>
                                        <field name="warehouse_id"/>
                                    </group>
                                    <group string="Quantities">
                                        <field name="quantity"/>
                                        <field name="reserved_quantity"/>
                                        <field name="available_quantity"/>
                                        <field name="qty_available_sale"/>
                                    </group>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>


</odoo>